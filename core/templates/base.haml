!!! 5

%html{lang:"en"}
  %head
    %meta{charset:"utf-8"}
    %title SpkrBar.com - A site for speakers, conferences, and the people who attend them.
    %meta{name:"viewport", content:"width=device-width, initial-scale=1.0"}
    %meta{name:"description", content:""}
    %meta{name:"author", content:""}

    - css_asset_tag 'vendor/css/vendor.css'
    - css_asset_tag 'css/styles.css'

    - js_asset_tag 'vendor/js/vendor.js'

    - block 'head'

    %link{rel:"apple-touch-icon-precomposed", sizes:"144x144", href:"../assets/ico/apple-touch-icon-144-precomposed.png"}
    %link{rel:"apple-touch-icon-precomposed", sizes:"114x114", href:"../assets/ico/apple-touch-icon-114-precomposed.png"}
    %link{rel:"apple-touch-icon-precomposed", sizes:"72x72", href:"../assets/ico/apple-touch-icon-72-precomposed.png"}
    %link{rel:"apple-touch-icon-precomposed", href:"../assets/ico/apple-touch-icon-57-precomposed.png"}
    %link{rel:"shortcut icon", href:"../assets/ico/favicon.png"}

  %body
    .container-narrow
      .masthead
        .row
          .span3
            %a{href:"/"}
              %img.logo{src:"{{STATIC_URL}}img/logo.png"}
          .span9
            .row
              .span9
                .search.pull-right
                  %form{method:"GET", action:"/search"}
                    %input.search-query{name:"query", type:"text", placeholder:"Search"}
                    %button.btn.btn-warning
                      %i.icon-search
            .row
              .span9
                %ul.nav.nav-pills.pull-right
                  %li
                    %a{href:"/talks"}
                      %i.icon-comments-alt
                      Talks
                  %li
                    %a{href:"/speakers"}
                      %i.icon-group
                      Speakers
                  %li
                    %a{href:"/events"}
                      %i.icon-calendar
                      Events

                  - if not user.is_anonymous
                    - if user.is_speaker
                      %li
                        %a.add-talk{href:"#add-talk-popup"}
                          %i.icon-plus
                          Add Talk
                    - elif user.is_event_planner
                      %li
                        %a.add-event{href:"/event/new"}
                          %i.icon-plus
                          Add Event

                  %li
                    %a{href:"/blog"}
                      %i.icon-file-text
                      Blog

                  - if user.is_anonymous
                    %li
                      %a{href:"/login"}
                        %i.icon-signin
                        Login
                    %li
                      %a{href:"/register"} Register
                  - else
                    %li.dropdown
                      %a.dropdown-toggle{data-toggle:"dropdown", href:"#"}
                        %i.icon-gear
                        My Account
                        %b.caret

                      - if user.notification_set.all
                        Notifications

                      %ul.dropdown-menu
                        %li
                          %a{href:"{{user.get_absolute_url}}"}
                            %i.icon-user
                            My Profile
                        %li
                          %a{href:"/profile/invite"}
                            %i.icon-mail-forward
                            Send Invites
                        - if user.is_superuser
                          %li
                            %a{href:"/admin"}
                              %i.icon-gears
                              Administration
                        %li
                          %a{href:"/logout"}
                            %i.icon-signout
                            Logout

      - block 'subnav-container' 
        .subnav
          .row
            .span6
              %h2
                - block 'title'
                  Title Of Page
            .span6
              .nav.btn-group.pull-right
                - block 'subnav'
                  %a.btn.btn-warning{href:"#"}
                    Example
                  %a.btn.btn-warning{href:"#"}
                    Example
                  %a.btn.btn-warning{href:"#"}
                    Example

      - block 'callout'

      .content-container
        - block 'content'

      .clearfix

      .footer
        %p &copy; Agile Hog LLC. 2013

  - js_asset_tag 'js/application.js'

  - block 'scripts'

  - include 'talks/_popup_talk_new_partial.haml'
