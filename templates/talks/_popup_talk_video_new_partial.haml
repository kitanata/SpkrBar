%div{style:"display:none"}
  #link-video-popup{style:"background-color: white; padding: 40px;"}
    %h2 Add Video Link
    %form{action:"/talk/{{talk.id}}/video/new", method:"POST"}
      - csrf_token

      %label{for:"video-source"} Source:
      %select#video-source{name:"source"}
        %option{value:"YOUTUBE"} YouTube
        %option{value:"VIMEO"} Vimeo

      %label{for:"video-embed-data"} Embed Code:
      %input#video-embed-data{name:"embed", type:"text"}

      %button.btn.btn-warning{type:"submit"} Save

%script{type:"text/javascript"}
  $('.link-video').colorbox({inline: true, width:"400px"});
