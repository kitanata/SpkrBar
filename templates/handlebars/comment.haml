{% verbatim %}
  %script#comment-templ{type:"text/x-handlebars-template"}
    %ul
      %li
        %h4 {{datetime}}, {{name}} said...
        %p {{comment}}
      .reply-area{data-id:"{{id}}", style:"display: none"}
        %textarea.comment-text{data-id:"{{id}}", name:'comment', placeholder:"Reply to comment..."}
        %button.comment-reply-create.btn.btn-warning{data-id:"{{id}}"} Submit Reply
      .comment-buttons
        %a.comment-reply{data-id:"{{id}}"}
          %i.icon-reply
          Reply
        %a.comment-report{data-id:"{{id}}"}
          %i.icon-file-alt
          Report
        {{#if can_delete}}
          %a.comment-delete{data-id:"{{id}}"}
            %i.icon-remove
            Delete
        {{/if}}
      .comment-root
{% endverbatim %}
