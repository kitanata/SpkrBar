{% verbatim %}
  %script#engagement-thumb-templ{type:"text/x-handlebars-template"}
    {{#if show_buttons}}
      .content-buttons
        %a{href:"{{ event_url}}"}
          {{ event_name }}
        %br in {{ city }}, {{ state}}
        {{ date }}
        %br {{ time }}

        {{#if tags}}
          .tag-cloud.pull-left
            {{#each tags }}
              .label.label-info {{ name }}
            {{/each}}
        {{/if}}
      .buttons
        .btn-group.btn-group-vertical
          {{#if user_attending}}
            {{#if user_endorsed}}
              %a.btn.btn-warning{href:"/talk/{{talk_id}}/endorse", data-original-title:"Endorse Talk", data-toggle:"tooltip"}
                %i.icon-thumbs-up
            {{else}}
              %a.btn.disabled.btn-warning
                %i.icon-thumbs-up
            {{/if}}
            %a.btn.btn-warning{href:"/talk_event/{{id}}/attend", data-original-title:"Cancel", data-toggle:"tooltip"}
              %i.icon-ban-circle
          {{else}}
            {{#unless user_event_planner}}
              %a.btn.btn-warning{href:"/talk_event/{{id}}/attend", data-original-title:"Attend Talk", data-toggle:"tooltip"}
                %i.icon-calendar
            {{/unless}}
          {{/if}}
          {{#if user_owned}}
            #delete-engagement.btn.btn-danger{data-id:"{{id}}"}
              %i.icon-remove
          {{/if}}
    {{else}}
      .content
        %div
          %a{href:"{{ event_url}}"}
            {{ event_name }}
          %br in {{ city }}, {{ state}}
          {{ date }}

        {{#if tags}}
          .tag-cloud.pull-left
            {{#each tags }}
              .label.label-info {{ name }}
            {{/each}}
        {{/if}}
    {{/if}}
{% endverbatim %}
